<%= form_for @event do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Event name", class: "form-control"%>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your awesome event", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Price</label>
    <div class="input-group">
      <div class="input-group-addon">â‚¬</div>
      <%= f.number_field :price, placeholder: "eg. 5", class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <label>Capacity</label>
    <%= f.select :capacity, [["10", 10], ["20", 20], ["30", 30], ["40+", 40]], prompt: "Select a capacity", class: "form-control" %>
  </div>


  <label>Amenities</label>

  <div class="form-group">
    <%= f.check_box :includes_food %> Food
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %> Drinks
  </div>


  <div class="form-group">
    <label>Starts At</label>
    <div class="input-group">
      <div class="input-group-addon"></div>
      <%= f.datetime_select :starts_at, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label>Ends At</label>
    <div class="input-group">
      <div class="input-group-addon"></div>
      <%= f.datetime_select :ends_at, class: "form-control" %>
    </div>
  </div>

  <label>Do you wish to publish your event?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
