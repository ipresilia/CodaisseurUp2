<div class="panel panel-primary">
   <div class="panel-heading"><%= @event.name %></div>

   <div class="panel-body">

     <p>Location: <%= @event.location %></p>
     <p>Host: <%= @event.user.email %></p>

     <!-- Main Info -->
     <h4>Main Info</h4>
     <p><strong>Event Name:</strong> <%= @event.name %></p>
     <p><strong>Capacity:</strong> <%= @event.capacity %> <%= @event.capacity > 1 ? "Guests" : "Guest" %></p>

     <!-- About -->
     <h4>About</h4>
     <p><%= @event.description %></p>

     <!-- Amenities -->
     <h4>Amenities</h4>
     <ul class="amenities">
       <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
       <li><%= !@event.includes_drinks ? ("<s>Drinks</s>").html_safe : "Drinks" %></li>
     </ul>

   </div>

 </div>

 <%= link_to "Back", events_path, class: "btn btn-default" %>
